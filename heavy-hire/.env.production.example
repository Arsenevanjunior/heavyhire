# Production environment template
# Copy to .env.production and fill in your production values

# Database - Use managed PostgreSQL service (e.g., Vercel Postgres, Railway, Supabase)
DATABASE_URL="postgresql://user:password@host:5432/heavyhire"

# Authentication
NEXTAUTH_SECRET="generate-a-random-string-use-openssl-rand-base64-32"
NEXTAUTH_URL="https://your-domain.com"

# App Settings
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NODE_ENV="production"

# Optional: Payment Provider Integration
# PAYMENT_API_KEY="your-api-key"
# PAYMENT_API_URL="https://api.payment-provider.com"

# Optional: Email Service
# SMTP_FROM="noreply@your-domain.com"
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
