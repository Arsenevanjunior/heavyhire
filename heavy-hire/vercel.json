{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "env": [
    {
      "key": "DATABASE_URL",
      "description": "PostgreSQL connection string"
    },
    {
      "key": "NEXTAUTH_SECRET",
      "description": "NextAuth.js secret key for JWT signing"
    },
    {
      "key": "NEXTAUTH_URL",
      "description": "Base URL for NextAuth.js"
    },
    {
      "key": "NODE_ENV",
      "description": "Environment (production/development/test)",
      "value": "production"
    }
  ]
}
